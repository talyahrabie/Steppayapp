{
  "expo": {
    "name": "StePPay",
    "slug": "StePPay",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "steppay",
    "icon": "./assets/img/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/img/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rabee.steppay",
      "infoPlist": {
        "NSMotionUsageDescription": "نحتاج للوصول لحساس الحركة لعد خطواتك ومكافأتك عليها",
        "NSPhotoLibraryUsageDescription": "نحتاج للوصول إلى معرض الصور لتغيير صورة البروفايل الخاصة بك",
        "NSCameraUsageDescription": "نحتاج للوصول إلى الكاميرا لالتقاط صورة للبروفايل"
      }
    },
    "android": {
      "package": "com.rabee.steppay",
      "adaptiveIcon": {
        "foregroundImage": "./assets/img/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.INTERNET",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/img/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "يحتاج التطبيق للوصول إلى الصور لتتمكن من تغيير صورة ملفك الشخصي.",
          "cameraPermission": "يحتاج التطبيق للوصول إلى الكاميرا لتتمكن من التقاط صورة لملفك الشخصي."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ac712417-20af-49b3-a70b-44d6ef64df01"
      }
    },
    "owner": "jasminyasser2026"
  }
}
